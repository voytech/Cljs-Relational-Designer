(ns ui.components.pagination
  (:require [ui.components.page-thumb :as pt]))

(defelem pagination
  ([{:keys [enabled pages change-page page-thumb]}]
     (ul :class "pagination"
         (cell=
          (loop-tpl :bindings [idx  (if (true? enabled) (range 0 pages) (range 0 1))]
                    (li (a
                         :click #(change-page @idx)
                         :href "#" (str (inc @idx))
                         (when (not (nil? page-thumb)) (page-thumb @idx)))))))))
